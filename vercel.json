{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"  // Serve all other routes with server.js
      }
    ],
    "env": {
      "NEXT_PUBLIC_MY_API_KEY": "@next_public_my_api_key"  // Make sure this is set in your Vercel environment variables
    }
  }
  